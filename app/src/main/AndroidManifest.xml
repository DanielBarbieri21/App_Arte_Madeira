<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.ArteMadeira"
        tools:targetApi="31">
        
        <!-- Splash Screen / Login Activity -->
        <activity
            android:name=".ui.login.LoginActivity"
            android:exported="true"
            android:theme="@style/Theme.ArteMadeira.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
        <!-- Main Activity -->
        <activity
            android:name=".ui.main.MainActivity"
            android:exported="false"
            android:label="@string/app_name" />
        
        <!-- Cliente Activities -->
        <activity
            android:name=".ui.cliente.ListaClientesActivity"
            android:exported="false"
            android:label="@string/title_clientes"
            android:parentActivityName=".ui.main.MainActivity" />
        
        <activity
            android:name=".ui.cliente.CadastroClienteActivity"
            android:exported="false"
            android:label="@string/title_cadastro_cliente"
            android:parentActivityName=".ui.cliente.ListaClientesActivity" />
        
        <!-- Pedido Activities -->
        <activity
            android:name=".ui.pedido.ListaPedidosActivity"
            android:exported="false"
            android:label="@string/title_pedidos"
            android:parentActivityName=".ui.main.MainActivity" />
        
        <activity
            android:name=".ui.pedido.CadastroPedidoActivity"
            android:exported="false"
            android:label="@string/title_cadastro_pedido"
            android:parentActivityName=".ui.pedido.ListaPedidosActivity" />
        
        <!-- Produto Activities -->
        <activity
            android:name=".ui.produto.ListaProdutosActivity"
            android:exported="false"
            android:label="@string/title_produtos"
            android:parentActivityName=".ui.main.MainActivity" />
        
        <activity
            android:name=".ui.produto.CadastroProdutoActivity"
            android:exported="false"
            android:label="@string/title_cadastro_produto"
            android:parentActivityName=".ui.produto.ListaProdutosActivity" />
        
        <!-- Estoque Activity -->
        <activity
            android:name=".ui.estoque.EstoqueActivity"
            android:exported="false"
            android:label="@string/title_estoque"
            android:parentActivityName=".ui.main.MainActivity" />
        
        <activity
            android:name=".ui.estoque.CadastroMaterialActivity"
            android:exported="false"
            android:label="@string/title_cadastro_material"
            android:parentActivityName=".ui.estoque.EstoqueActivity" />
        
        <!-- RelatÃ³rios Activity -->
        <activity
            android:name=".ui.relatorios.RelatoriosActivity"
            android:exported="false"
            android:label="@string/title_relatorios"
            android:parentActivityName=".ui.main.MainActivity" />
        
    </application>

</manifest>
